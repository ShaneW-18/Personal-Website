---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Resume from '../../public/Resume.pdf';

---

<Layout title="Shane Wiles">
	
	<main>
		<div class='wrapper'>
		<h1><span class="text-gradient">Shane Wiles</span></h1>
		<div class="center">
			<img src="../../public/s.webp"/>
		</div>
		<p onclick="location.href='https://linkedin.com/in/shane-wiles'" class="instructions">
			Want to learn more about me? Come take a look!<br/>
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://linkedin.com/in/shane-wiles"
				title="Linked in"
			/>
			<Card
				href="https://github.com/ShaneW-18"
				title="GitHub"
			
			/>
			<Card
				href={Resume}
				title="Resume"
			/>
	
			<Card
				href="mailto: shane@swiles.tech"
				title="Hire Me!"
			/>
		</ul>
		<img src="../../public/c.png" width="250" height="200"/>
		<img src="../../public/docker.png" width="200" height="200"/>
		<img src="../../public/java.png" width="200" height="200"/>
		<img src="../../public/react.png" width="200" height="200"/>
		<section>
			<div class="tile bottom-right"></div>
			<div class="tile bottom-right"></div>
			<div class="tile bottom-right"></div>
			<div class="tile"></div>
			<div class="tile"></div>
			<div class="tile"></div>
		</section>
	
	</div>
	</main>
	<script>
		let elementsArray = document.querySelectorAll(".tile");
		console.log(elementsArray);
		window.addEventListener('scroll', fadeIn ); 
		function fadeIn() {
    	for (var i = 0; i < elementsArray.length; i++) {
        	var elem = elementsArray[i]
        	var distInView = elem.getBoundingClientRect().top - window.innerHeight + 20;
        	if (distInView < 0) {
            	elem.classList.add("inView");
        	} else {
            	elem.classList.remove("inView");
        }
    }
}
fadeIn()
	</script>
</Layout>

<style>
	:root {
		--astro-gradient: linear-gradient(0deg, #7918d4,#3500d3 );
	}

	h1 {
		margin: 3;
       	padding: 3;
		text-align: center;
	}
	.bottom {
  		background-color: lightyellow;
	}
	.bottom1 {
  		background-color: rgb(158, 158, 0);
	}
	.bottom2 {
  		background-color: rgb(224, 255, 247);
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 60ch;
	}

	body {
  		background-color: #0a0129;
	}	

	.center{

  animation: fadeIn 5s; 
		display: block;
  		margin-left: auto;
  		margin-right: auto;
  		width: 50%;
	}
	@keyframes fadeIn {
  		0% { opacity: 0; }
  		100% { opacity: 1; }
	}
	.text-gradient {
		
		font-weight: 900;
		background-image: var(--astro-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		background-position-y: 100%;
		border-radius: 0.4rem;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}

	.instructions {
    	transition: .5s;
		text-align: center;
		line-height: 1.6;
		margin: 1rem 0;
		background: #3500d3;
		color: #EDF5E1 !important;
		padding: 1rem;
		border-radius: 0.4rem;
		color: var(--color-bg);
	}
	.instructions:is(:hover, :focus-within) {
		background-position: 0;
	}
	.instructions:is(:hover, :focus-within) {
		background: #282828;
	}

	.instructions code {
		font-size: 0.875em;
		border: 0.1em solid var(--color-border);
		border-radius: 4px;
		padding: 0.15em 0.25em;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}

	.tile {
    height:400px;
    margin-top:40px;
    background:saddlebrown;
    -webkit-transform: translateY(50px) rotate(-5deg) translateZ(0);
    transform: translateY(50px) rotate(-5deg) translateZ(0);
    -webkit-transition-delay: .3s;
    -o-transition-delay: .3s;
    transition-delay: .3s;
    -webkit-transition: .4s;
    -o-transition: .4s;
    transition: .4s;
    opacity: 0;
    -webkit-filter: grayscale(1);
    filter: grayscale(1);
}
.bottom-right.inView {
    opacity: 1;
    -webkit-transform: translateY(0px) rotate(0deg) translateZ(0);
    transform: translateY(0px) rotate(0deg) translateZ(0);
}
.inView {
    opacity: 1;
    -webkit-transform: translateY(0px) rotate(0deg) translateZ(0);
    transform: translateY(0px) rotate(0deg) translateZ(0);
}
section {
    padding:20px;
}
</style>
